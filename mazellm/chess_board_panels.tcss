/* General layout for the main container */
#main-container {
    layout: horizontal;
    width: 100%;
    height: 100%;
}

/* Style for the left panel */
#left-panel {
    width: 30; /* Give the left panel a fixed width */
    height: 100%;
    background: $panel;
    border-right: thick solid $primary;
}

#left-panel-content {
    content-align: center middle;
    width: 100%;
    height: 100%;
}

/* Style for the right panel */
#right-panel {
    width: 1fr; /* The right panel takes up the remaining space */
    height: 100%;
    layout: vertical;
    align: center middle; /* Center the chessboard within the panel */
}

/* Styles for the chessboard, now inside the right panel */
#chess-board {
    layout: grid;
    grid-size: 5 5;
    grid-gutter: 0;
    /* Set a fixed size or aspect ratio for the board */
    width: 50;
    height: 25;
}

#chess-board > Static {
    width: 1fr;
    height: 1fr;
}

#chess-board > Static:odd {
    background: #B58863;
}

#chess-board > Static:even {
    background: #F0D9B5;
}