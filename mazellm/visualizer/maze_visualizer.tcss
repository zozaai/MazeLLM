/* ===== Layout ===== */
#main-container {
    layout: horizontal;
    width: 100%;
    height: 100%;
}

/* Left panel */
#left-panel {
    width: 40%;
    height: 100%;
    background: $panel;
    border-right: thick solid $primary;
}

#left-panel-content {
    content-align: left top;
    width: 100%;
    height: 100%;
    padding: 1 2;
    overflow: auto;
}

/* Right panel */
#right-panel {
    width: 1fr;
    height: 100%;
    layout: vertical;
    align: center middle;
}

/* ===== Maze board ===== */
#chess-board {
    layout: grid;
    grid-gutter: 0;
    width: 60;
    height: 30;
}

#chess-board > .tile {
    width: 1fr;
    height: 1fr;
    background: white;
}

#chess-board > .tile.free  { background: white; }
#chess-board > .tile.wall  { background: black; }
#chess-board > .tile.start { background: green; }
#chess-board > .tile.end   { background: blue; }

#chess-board > .tile.visited {
    background: #ffcc66;
}

/* NEW: older visited trail */
#chess-board > .tile.visited-old {
    background: #ffe6b3;
}

#chess-board > .tile.robot {
    background: #ff3333;
}
