/* ===== Layout ===== */
#main-container {
    layout: horizontal;
    width: 100%;
    height: 100%;
}

/* Left panel */
#left-panel {
    width: 40%;
    height: 100%;
    background: $panel;
    border-right: thick solid $primary;
}

#left-panel-content {
    content-align: left top;
    width: 100%;
    height: 100%;
    padding: 1 2;
    overflow: auto;
}

/* Right panel */
#right-panel {
    width: 1fr;
    height: 100%;
    layout: vertical;
    align: center middle;
}


/* ===== Maze board ===== */
#chess-board {
    layout: grid;
    grid-gutter: 0;
    width: 60;
    height: 30;
}

/* Make tiles actually occupy space */
#chess-board > .tile {
    width: 1fr;
    height: 1fr;
    background: white; /* default so you SEE something */
}

/* ===== Maze board ===== */
#chess-board > .tile.free  { background: white; }
#chess-board > .tile.wall  { background: black; }
#chess-board > .tile.start { background: green; }
#chess-board > .tile.end   { background: blue; }

/* ðŸ”¥ Visited trajectory (very visible) */
#chess-board > .tile.visited {
    background: #ffcc66;   /* warm yellow/orange */
}

/* ðŸ¤– Robot (always on top) */
#chess-board > .tile.robot {
    background: #ff3333;   /* strong red */
}