/* mazellm/visualizer/maze_visualizer.tcss */

/* Main layout containers */
Horizontal {
    height: 100%;
}

InfoPanel {
    width: 30%;
    border: solid green;
    padding: 1;
}

/* The MazePanel is now a grid container */
MazePanel {
    width: 70%;
    align: center middle; /* Center the grid within the panel */
}

/* Define the grid itself */
#maze-grid {
    layout: grid;
    /* The grid size will be set from Python */
    grid-gutter: 0;
    /* Let's make it look squarish */
    width: 90%;
    height: 90%;
}

/* Base style for all cells (Static widgets) inside the grid */
#maze-grid > Static {
    width: 1fr;
    height: 1fr;
    border: solid black;
    content-align: center middle;
    color: white;
    text-style: bold;
}

/* Define background colors using classes */
.free-cell { background: green; }
.blocked-cell { background: red; }
.start-cell { background: #0000FF; } /* Blue */
.end-cell { background: #800080; }   /* Purple */